<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config>
  <balls>
    <ball>
      <position>
	<x>0.2</x>
	<y>0.2</y>
      </position>
      <velocity>
	<x>0.0</x>
	<y>0.0</y>
      </velocity>
    </ball>
  </balls>
  <background>
    <pixmap>
      <file>cracked.png</file>
    </pixmap>
  </background>
  <tile id="corridor">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <!-- default foreground: transparent -->
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <!--
        empty curve:
        1 ≤ 0
    -->
    <shape>
      <implicit-curve>1</implicit-curve>
    </shape>
  </tile>
  <tile id="circle">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          full small centered circle:
          (x-½)² + (y-½)² ≤ ¼
      -->
      <implicit-curve>x*x - x + 0.25 + y*y - y + 0.25 - 0.25</implicit-curve>
    </shape>
  </tile>
  <tile id="hole">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          full small centered hole:
          (x-½)² + (y-½)² ≥ ¼
      -->
      <implicit-curve>-x*x + x - 0.25 - y*y + y - 0.25 + 0.25</implicit-curve>
    </shape>
  </tile>
  <tile id="wall-solid">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          solid tile:
          - 1 ≤ 0
      -->
      <implicit-curve>-1</implicit-curve>
    </shape>
  </tile>
  <tile id="wall-rounded-upper-left">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          circle in upper left corner:
          (x-1)² + (y-1)² ≤ 1
      -->
      <implicit-curve>x*x - 2*x + 1 + y*y - 2*y + 1 - 1</implicit-curve>
    </shape>
  </tile>
  <tile id="wall-rounded-upper-right">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          circle in upper right corner:
          x² + (y-1)² ≤ 1
      -->
      <implicit-curve>x*x + y*y - 2.0*y + 1.0 - 1.0</implicit-curve>
    </shape>
  </tile>
  <tile id="wall-rounded-lower-left">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          circle in lower left corner:
          (x-1)² + y² ≤ 1
      -->
      <implicit-curve>x*x - 2.0*x + 1.0 + y*y - 1.0</implicit-curve>
    </shape>
  </tile>
  <tile id="wall-rounded-lower-right">
    <!-- default background: transparent -->
    <background>
      <pixmap>
        <file>cracked.png</file>
      </pixmap>
    </background>
    <foreground>
      <pixmap>
	<file>sm_squares.png</file>
      </pixmap>
    </foreground>
    <shape>
      <!--
          circle in lower right corner:
          x² + y² ≤ 1
      -->
      <implicit-curve>x*x + y*y - 1.0</implicit-curve>
    </shape>
  </tile>
  <field>
